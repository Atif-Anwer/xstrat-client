<UserControl x:Class="xstrat.Ui.ColorDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xstrat.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="25">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <CheckBox Name="CBox" VerticalAlignment="Center" Background="#336cb5"></CheckBox>
            <Ellipse Name="ColorCircle" Height="15" Width="15" Margin="2"></Ellipse>
            <Label Style="{StaticResource P2}" Name="LabelText" VerticalAlignment="Center"></Label>
        </StackPanel>
    </Grid>
</UserControl>
